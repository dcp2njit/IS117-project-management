---
import BaseLayout from "../layouts/BaseLayout.astro";

const base = import.meta.env.BASE_URL;
---

<BaseLayout title="Resume">
  <section class="container info-page">
    <h1>Resume</h1>
    <p class="subhead">Current resume and update date.</p>
    <div class="info-block">
      <a class="button-link" href={`${base}resume.pdf`}>Download resume.pdf</a>
      <p class="meta-line">Last updated: 2026-02-24</p>
    </div>
  </section>
</BaseLayout>
