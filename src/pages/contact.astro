---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Contact">
  <section class="container info-page">
    <h1>Contact</h1>
    <p class="subhead">Direct email and profile links.</p>
    <div class="info-block">
      <p class="info-label"><a href="mailto:hello@example.com">hello@example.com</a></p>
      <ul class="link-list">
        <li><a href="https://github.com/example">GitHub</a></li>
        <li><a href="https://www.linkedin.com/in/example">LinkedIn</a></li>
      </ul>
    </div>
  </section>
</BaseLayout>
